with "../src/gnoga.gpr";

project AdaBlog is

   for Languages use ("Ada");
   for Source_Dirs use (".");
   for Object_Dir use "../obj";
   for Exec_Dir use "../bin";
   for Main use ("demo.adb", "singleton.adb", "multiuser.adb",
                 "popups.adb", "forms.adb", "canvas_test.adb",
                 "db_sqlite.adb", "db_mysql.adb", "db_active.adb",
                 "storage.adb", "media.adb");

   package Builder is
      for Executable ("demo.adb") use "gnoga-demo";
   end Builder;
      
   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-g");
   end Compiler;
end AdaBlog;
