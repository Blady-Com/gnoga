desc Test the "zbmcompile" generated code, type specific accessors

set -u build_opt ""

set zbmcompile $(which -e zbmcompile)
set project_dir $(joinpaths $(dirname $(dirname $zbmcompile)) lib gnat)

copy -r mesg

execute -o $(nextlog) zbmcompile -G wprints -i -d mesg Xmpl_Messages Xmpl

copy main_01.adb
copy main_01.gpr
copy tzbmapp.gpr

execute -o $(nextlog -c build) gprbuild -aP$project_dir $build_opt -P main_01
execute -o $(nextlog) main_01
execute -o $(nextlog -c build) gnat clean -aP$project_dir $build_opt -P main_01

copy main_02.adb
copy main_02.gpr

# Expect this build to fail: not a numeric argument
execute -f -o $(nextlog -c build) gprbuild -aP$project_dir $build_opt -P main_02
delete main_02.ali

rename xmpl_messages.adb                  $(nextlog)
rename xmpl_messages.ads                  $(nextlog)
rename xmpl_messages-xmpl_wide_prints.adb $(nextlog)
rename xmpl_messages-xmpl_wide_prints.ads $(nextlog)
