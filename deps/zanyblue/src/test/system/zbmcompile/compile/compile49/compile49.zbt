desc Test the "zbmcompile" compilation, retaining unchanged generated files

copy App.properties

# Generate the base files
execute -o $(nextlog) zbmcompile -a -v My_Package App

# Copy in French localization, only the my_package.adb should be updated
copy App_fr.properties
execute -o $(nextlog) zbmcompile -a -v My_Package App

rename my_package.ads                      $(nextlog)
rename my_package-app_strings.ads          $(nextlog)
rename my_package-app_exceptions.ads       $(nextlog)
rename my_package-app_wide_strings.ads     $(nextlog)
rename my_package-app_prints.ads           $(nextlog)
rename my_package-app_wide_prints.ads      $(nextlog)

rename my_package.adb                      $(nextlog)
rename my_package-app_strings.adb          $(nextlog)
rename my_package-app_exceptions.adb       $(nextlog)
rename my_package-app_wide_strings.adb     $(nextlog)
rename my_package-app_prints.adb           $(nextlog)
rename my_package-app_wide_prints.adb      $(nextlog)
